{
  "apps": [
    {
      "name": "library-api",
      "script": "./src/server.js",
      "cwd": ".",

      "instances": 1,
      "exec_mode": "fork",

      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs"
      ],

      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },

      "out_file": "./logs/library-api-out.log",
      "error_file": "./logs/library-api-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    }
  ]
}
