{
  "openapi": "3.0.0",
  "info": {
    "title": "Library API",
    "version": "1.0.0",
    "description": "REST API for the library project (loans, cart, admin, invoices, reminders, ...)."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "Book": {
        "type": "object",
        "properties": {
          "book_id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "publisher": {
            "type": "string"
          },
          "published_year": {
            "type": "integer"
          },
          "genres": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "inventory": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer"
              },
              "available": {
                "type": "integer"
              }
            }
          }
        }
      },
      "Loan": {
        "type": "object",
        "properties": {
          "loan_id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "borrow_at": {
            "type": "string",
            "format": "date-time"
          },
          "due_date": {
            "type": "string",
            "format": "date-time"
          },
          "return_at": {
            "type": "string",
            "format": "date-time"
          },
          "renew_count": {
            "type": "integer"
          }
        }
      },
      "Invoice": {
        "type": "object",
        "properties": {
          "invoice_id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          },
          "loan_id": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": [
              "unpaid",
              "paid",
              "void"
            ]
          },
          "type": {
            "type": "string"
          },
          "days_overdue": {
            "type": "integer"
          },
          "amount_vnd": {
            "type": "integer"
          },
          "issued_at": {
            "type": "string",
            "format": "date-time"
          },
          "paid_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
